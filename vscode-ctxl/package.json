{
  "name": "vscode-ctxl",
  "displayName": "vscode-ctxl",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-ctxl.openChatInterface",
        "title": "Open Contextual Chat"
      },
      {
        "command": "vscode-ctxl.setAnthropicApiKey",
        "title": "Set Anthropic API Key"
      },
      {
        "command": "vscode-ctxl.setClientType",
        "title": "Set Anthropic Client Type"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contextual-chat",
          "title": "Contextual Chat",
          "icon": "resources/chat-icon.svg"
        }
      ]
    },
    "views": {
      "contextual-chat": [
        {
          "type": "webview",
          "id": "contextualChatSidebar",
          "name": "Contextual Chat"
        }
      ]
    },
    "configuration": {
      "title": "Contextual Chat",
      "properties": {
        "contextualChat.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for Anthropic Claude"
        },
        "contextualChat.clientType": {
          "type": "string",
          "enum": ["direct", "bedrock"],
          "default": "direct",
          "description": "Specifies the Anthropic client type to use (direct API or AWS Bedrock)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@anthropic-ai/bedrock-sdk": "^0.10.2",
    "@anthropic-ai/sdk": "^0.26.1",
    "@vscode/dts": "^0.4.1"
  },
  "enabledApiProposals": [
    "terminalExecuteCommandEvent"
  ],
  "files": [
    "out",
    "dist",
    "src",
    "package.json",
    "README.md"
  ]
}
